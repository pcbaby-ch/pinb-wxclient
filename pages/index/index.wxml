<!-- 店铺-head信息 #预览页面# ############ -->
<include src="../component/indexHead.wxml" />

<view class='main'>
  
  <!-- 附近-活动商品信息 #预览页面# ############  -->
  <include src="../component/listActiveGoods.wxml" />

  <!-- 页脚（含加载动态提示） -->
  <include src="../component/indexFoot.wxml" />
</view>

<!-- 消费二维码 -->
<view class='pay-container' wx:if="{{payContainerShow}}">
  <view class='pay'>
    <canvas class='canvas' canvas-id='canvas'></canvas>
    <view class='pay-type'>-- 付款方式 --</view>
    <image class='pay-close' src='../img/close-circle.png' bindtap='closePay'></image>
  </view>
</view>
<!-- 右下角悬浮菜单 -->
<view class='fixed'>
  <view wx:if='{{isEdit}}' class='fixed-list' catchtap='save'>
    <image src='../img/save.png'></image>
    <view>保存</view>
  </view>
  <view class='fixed-list' catchtap='ch_edit'>
    <image src='{{isEdit?"../img/eye.png":"../img/edit-square.png"}}'></image>
    <view>{{isEdit?"预览":"编辑"}}</view>
  </view>
  <!-- <view class='fixed-list' catchtap='add'>
      <image src='../img/plus-square.png'></image>
      <view>增加</view>
    </view> -->

</view>

<toast usToast='{{usToast}}'></toast>