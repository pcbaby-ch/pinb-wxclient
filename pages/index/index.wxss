.heat-line1 {
  display: flex;
}

.head-location {
  padding-left: 10rpx;
  padding-bottom: 15rpx;
  width: 83%;
  display: flex;
  position: block;
}

.heat-line1 button {
  /* display: inline-block; */
  vertical-align: middle;
  text-align: center;
  padding: 0;
  border-radius: 0;
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
  overflow: hidden;
  background-color: #fff;
  border: none;
  line-height: 40rpx;
  box-sizing: content-box;
  width: 100%;
  position: block;
}

.head-location image {
  width: 38rpx;
  height: 38rpx;
}

.head-location .locatoion-text {
  padding-left: 2rpx;
  font-size: 30rpx;
  line-height: 36rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  position: block;
}

.head-search {
  width: 100%;
  padding-bottom: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.head-search input {
  text-align: center;
  width: 98%;
  height: 60rpx;
  box-sizing: border-box;
  margin-top: 5rpx;
  border-radius: 30rpx;
  border: 0;
  background-color: #ececec;
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}

.search-placeholder {
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
