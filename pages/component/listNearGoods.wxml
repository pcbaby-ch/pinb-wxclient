<!-- 已开团商品展示 -->
<!-- <scroll-view scroll-y="true" scroll-into-view="{{toView}}" scroll-with-animation="true" bindscrolltolower="scrollToBottom" class='opacityshow'> -->
<!-- <view wx:for='{{pageArrayContainer}}' wx:for-item="pageArray" wx:for-index="pageArrayIndex" wx:key="index"> -->
<view wx:for='{{pageArray}}' wx:for-item="item" wx:key="groubaTrace" wx:for-index="index">
  <!-- 无头像布局 ######################################## -->
  <view class='goods-list-active}}' wx:if="{{!item.userImgs}}" catchtap='goMyShop'>
    <!-- <view wx:if="{{item.groubaIsnew}}" class='goods-list-new'></view> -->
    <view class='goods-list-new'>{{([6,8,9][item.groubaSize])==item.ordersStatus.length?'成团':(item.groubaIsnew?'新':'')}}</view>
    <!-- 活动商品-左侧 -->
    <view style='width:50%;position: relative;border-right: 2rpx solid #eee;' class='goods-list-left'>
      <image class='goodsImg' style="height: 100%" src='{{item.goodsImgView}}' data-index='{{index}}' mode='aspectFill'></image>
    </view>
    <!-- 活动商品-右侧 -->
    <view class='goods-list-right' data-index='{{index}}'>
      <!-- 商品名称-价格 -->
      <view data-type='name' data-index='{{index}}' class='goodsName' wx:if='{{editItem!=index+"-goodsName"}}'>{{item.goodsName||'??商品名称??'}}
        <text class='yuanjia'>￥{{item.goodsPrice||'??'}}</text>
      </view>
      <!-- 60分后结束 -->
      <view class='main-list-endTime {{item.endTimeH || item.endTimeM || editItem==index+"-endTime"?"":""}}' data-index='{{index}}'>
        <image class='goods-list-right-icon' src='../img/time-circle2.png' data-type='endTime' data-index='{{index}}'></image>
        <view data-type='endTime' data-index='{{index}}'>
          {{item.groubaActiveMinute?item.groubaActiveMinute+'分 拼团时长':'??拼团时长??'}}
        </view>
      </view>
      <!-- 6人团 -->
      <view class='main-list-right-groubaSize' style='padding-bottom:0rpx;' data-index='{{index}}'>
        <image class='goods-list-right-icon' src='../img/team.png'></image>
        <view>{{[6,8,9][item.groubaSize]?[6,8,9][item.groubaSize]+'人团':'?人团'}}</view>
      </view>
      <!-- 距离800m -->
      <view catchtap='getLocation' class='main-list-right-location'>
        <image class='goods-list-right-icon' src='../img/location.png'></image>
        <view>{{item.distance}}</view>
      </view>
      <button wx:if="{{indexMode=='userShare'}}" open-type='' data-index='{{index}}' catchtap='onShareAppMessageA' hover-stop-propagation='true' class='buttonBlock main-list-share'>开团立省{{item.groubaDiscountAmount||'??'}}元</button>
    </view>
  </view>
</view>
