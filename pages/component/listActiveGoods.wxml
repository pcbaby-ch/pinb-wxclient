<!-- 已开团商品展示 -->
<view wx:for='{{productList}}' wx:key='{{index}}' class='{{!isEdit?"opacityshow":""}}'>
  <view wx:if='{{!isEdit}}' class='goods-list-active {{editIndex==index?"goods-list-error":""}}' bindtap='toQrCode'>
    <view wx:if="{{item.groubaIsnew}}" class='goods-list-new'>新</view>
    <view wx:if="{{false}}" class='goods-list-done'>成团</view>
    <!-- 活动商品-左侧 -->
    <view style='width:50%;position: relative;border-right: 2rpx solid #eee;' class='goods-list-left'>

      <image class='goodsImg' style="height: 100%" src='{{item.goodsImgView}}' data-index='{{index}}' mode='aspectFill'></image>


    </view>
    <!-- 活动商品-右侧 -->
    <view class='goods-list-right'>
      <view data-type='name' data-index='{{index}}' class='goodsName' wx:if='{{editItem!=index+"-goodsName"}}'>{{item.goodsName||'??商品名称??'}}
        <text class='yuanjia'>￥{{item.goodsPrice||'??'}}</text>
      </view>

      <view class='main-list-endTime {{item.endTimeH || item.endTimeM || editItem==index+"-endTime"?"":""}}'>
        <image src='../img/time-circle2.png' data-type='endTime' data-index='{{index}}'></image>
        <view data-type='endTime' data-index='{{index}}'>
          {{item.groubaActiveMinute?(item.groubaActiveMinute?item.groubaActiveMinute+'分':'')+'后结束':'??拼团时长??'}}
        </view>
      </view>

      <view class='main-list-right-groubaSize'>
        <image src='../img/team.png'></image>
        <view>{{[6,8,9][item.groubaSize]?[6,8,9][item.groubaSize]+'人团':'?人团'}}</view>
      </view>

      <view class='main-list-right-location'>
        <image src='../img/location.png'></image>
        <view class='groubaSize-number'>{{}}800m</view>
      </view>
      <button open-type='share' data-index='{{index}}' bindtap='' class='buttonBlock main-list-share'>开团立省{{item.groubaDiscountAmount||'??'}}元</button>



    </view>
  </view>

</view>