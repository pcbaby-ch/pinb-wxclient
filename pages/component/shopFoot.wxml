<view class='head-foot'>
  <view class='head-foot' style='width:230rpx;margin-top:6rpx'>
    <image src='../img/phone.png'></image>
    <view data-type='groub.groubPhone' data-index='' style='' wx:if='{{editItem!="-groub.groubPhone"}}' catchtap='catchtap'>{{groub.groubPhone||'点我填写客服热线'}}</view>
    <input maxlength='11' type="number" class="antEdit" style='width:175rpx;' bindblur='bindinput' data-type='groubPhone' value='{{groub.groubPhone}}' wx:if='{{editItem=="-groub.groubPhone"}}' focus='{{editItem=="-groub.groubPhone"}}' />
  </view>

  <button class='buttonBlock' bindtap='getLocation' style='margin:0;'>
    <view class='head-foot {{groub.groubAddress?"":"antScale"}}'>
      <image src='../img/location.png'></image>
      <view>{{groub.groubAddress||'点我选取店铺位置'}}</view>
    </view>
  </button>
</view>
