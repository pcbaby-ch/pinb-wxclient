.opacityshow {
  animation: opacityshow 0.5s ease;
}

@keyframes opacityshow {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

.antEdit {
  border: 1rpx solid #8bc34a;
  border-radius: 4rpx;
  text-align: left;
}

.antScale {
  animation: animation_scale 4s ease-in-out infinite;
}

@keyframes animation_scale {
  0% {
    transform: scale(1);
  }

  25% {
    transform: scale(1.1);
  }

  50% {
    transform: scale(1);
  }

  75% {
    transform: scale(1.1);
  }
}

.buttonBlock {
  /* display: inline-block; */
  vertical-align: middle;
  text-align: center;
  padding: 0;
  border-radius: 0;
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
  overflow: hidden;
  background-color: #fff;
  border: none;
  line-height: 40rpx;
  box-sizing: content-box;
  width: 100%;
  position: block;
}

.buttonBlock::after {
