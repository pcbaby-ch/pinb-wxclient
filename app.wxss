/** 订单list ***************/

.order-list {
  display: flex;
  height: 200rpx;
  position: relative;
  margin-bottom: 10rpx;
  box-shadow: 0 0 5px #888;
  border-radius: 2px;
  overflow: hidden;
}

.order-list .goods-list-left .goodsImg {
  width: 100%;
  height: 100%;
  display: block;
}

/** 商品list *********************/

.goods-list {
  display: flex;
  height: 250rpx;
  position: relative;
  margin-bottom: 10rpx;
  box-shadow: 0 0 5px #888;
  border-radius: 2px;
  overflow: hidden;
}

.goods-list-error {
  box-shadow: 0 0 5px #ff9800;
}

.goods-list-active {
  display: flex;
  height: 200rpx;
  position: relative;
  margin-bottom: 10rpx;
  box-shadow: 0 0 5px #888;
  border-radius: 2px;
  overflow: hidden;
