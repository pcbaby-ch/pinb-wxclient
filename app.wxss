  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  text-align: center;
  font-family: Arial;
  border-top: 2rpx solid #eee;
}

.goods-list-new {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 50rpx;
  height: 46rpx;
  line-height: 46rpx;
  border-radius: 0px 0px 100rpx 0px;
  background-color: rgba(139, 195, 74, 1);
  color: rgba(255, 255, 255, 1);
  font-size: 25rpx;
  text-align: center;
  box-shadow: 0px 0px 0px 0px rgba(255, 255, 255, 1);
  font-family: Arial;
  z-index: 2;
}

.goods-list-done {
  position: absolute;
  bottom: 0px;
  right: 0px;
  width: 70rpx;
  height: 44rpx;
  line-height: 44rpx;
  border-radius: 100rpx 0px 0px;
  background-color: rgba(139, 195, 74, 1);
  color: rgba(255, 255, 255, 1);
  font-size: 25rpx;
  text-align: right;
  padding-right: 8rpx;
  font-family: Arial;
